<h1>Listing logs</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @logs.each do |log| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td>
			<%= log.user_id %><br/>
			<%= log.date %>
		</td>
		<td class="list_description">
			<dl>
				<dt><%= log.title %></dt>
				<dd><%= log.description %></dd>
			</dl>
		</td>
        
        <td class="list_actions">
			<%= link_to 'Show', log %><br/>
			<%= link_to 'Edit', edit_log_path(log) %><br/>
			<%= link_to 'Destroy', log, method: :delete, data: { confirm: 'Are you sure?' } %>
		</td>
      </tr>
    <% end %>
    <tr><td><%= link_to 'New Log', new_log_path %></td></tr>
  </tbody>
</table>

<br>


